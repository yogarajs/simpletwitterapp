@model SimpleTwitterApp.UI.Models.TweetCompositeViewModel

@{
    ViewBag.Title = "Simple Twitter";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>All Tweets</h2>
                @Html.Partial("~/Views/Tweet/Tweets.cshtml", Model.Tweets)
            </div>
            <div class="col-md-4">
                <h2>My Tweets</h2>
                @Html.Partial("~/Views/Tweet/Tweets.cshtml", Model.MyTweets)
            </div>
            <div class="col-md-4">
                @Html.Partial("~/Views/Tweet/Users.cshtml", Model.Users)
            </div>
        </div>
    </div>
</section>


